<?xml version="1.0" encoding="utf-8" standalone="no"?>
<qnx>
    <id>org.gpodder.playbook</id>
    <filename>gpodder-bb10</filename>
    <name>gPodder</name>
    <versionNumber>4.1.0</versionNumber>
    <buildId>1</buildId>
    <description>gPodder manages your podcasts.</description>
    <copyright>2014</copyright>

    <initialWindow>
        <systemChrome>none</systemChrome>
        <transparent>false</transparent>
        <autoOrients>false</autoOrients>
        <aspectRatio>landscape</aspectRatio>
    </initialWindow>

    <arg>-platform</arg>
    <arg>qnx</arg>

    <publisher>Thomas Perl</publisher>
    <permission system="true">run_native</permission>
    <env var="LD_LIBRARY_PATH" value="app/native/lib"/>
    <env var="QT_PLUGIN_PATH" value="app/native/plugins"/>
    <env var="QML2_IMPORT_PATH" value="app/native/qml"/>
    <icon><image>gpodder-bb10.png</image></icon>
</qnx>
